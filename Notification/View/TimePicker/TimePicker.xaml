            <Button Text="Save Changes" CornerRadius="10" Command="{Binding SaveChangesCommand}" CommandParameter="1"/>

            <Button Text="Cancel" BackgroundColor="Transparent" TextColor="{DynamicResource SecondaryTextColor}"
